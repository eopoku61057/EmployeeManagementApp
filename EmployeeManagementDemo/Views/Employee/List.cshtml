@model IEnumerable<EmployeeManagementDemo.Models.Employee>
@{
    ViewData["Title"] = "List";
}

<h1>Employee List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td colspan="3">
                    <h4>No Records Found!</h4>
                </td>
            </tr>
        }
        @foreach(var employee in Model)
        {
            <tr>
               <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department.DepartmentName</td>
            </tr>
        }
    </tbody>
</table>

